@model List<Komputer>

@using System.ComponentModel.DataAnnotations

@{

}

<!DOCTYPE html>
<html>
<head>
    <title>Lista komputerów</title>
    <style>
        table {
            border-collapse: collapse;
        }
        th, td {
            padding: 10px;
            border: 1px solid #ccc;
            text-align: left;
        }
        th {
            background-color: #f4f4f4;
        }
    </style>
</head>
<body>
<div>
    <h2>Lista komputerów</h2>

    @if (Model != null && Model.Count > 0)
    {
    <table>
        <tr>
            <th>@Html.DisplayNameFor(model => model[0].Producent)</th>
            <th>@Html.DisplayNameFor(model => model[0].Cpu)</th>
            <th>@Html.DisplayNameFor(model => model[0].Ram)</th>
            <th>@Html.DisplayNameFor(model => model[0].Gpu)</th>
            <th>@Html.DisplayNameFor(model => model[0].DataProdukcji)</th>
            <th>@Html.DisplayNameFor(model => model[0].Priority)</th>
            <th>Akcje</th>
        </tr>
        @foreach (var item in Model)
        {
        <tr>
            <td>@item.Producent</td>
            <td>@item.Cpu</td>
            <td>@item.Ram</td>
            <td>@item.Gpu</td>
            <td>@item.DataProdukcji.ToString("yyyy-MM-dd")</td>
            <td>@item.Priority.GetDisplayName()</td>
            <td>
                <a class="btn btn-primary"
                   asp-action="Edit"
                   asp-controller="Komputer"
                   asp-route-id="@item.Id">Edytuj</a>
                <a class="btn btn-primary"
                   asp-action="Details"
                   asp-controller="Komputer"
                   asp-route-id="@item.Id">Szczegóły</a>
                <a class="btn btn-danger"
                   asp-action="Delete"
                   asp-controller="Komputer"
                   asp-route-id="@item.Id">Usuń</a>
            </td>
        </tr>
        }
    </table>
    }
    else
    {
    <p>Brak dostępnych komputerów.</p>
    }
    <div>
        <a class="btn btn-success"
           asp-action="CreateForm"
           asp-controller="Komputer">Dodaj nowy komputer</a>
    </div>
</div>
</body>
</html>
