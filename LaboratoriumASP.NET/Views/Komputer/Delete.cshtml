@model Komputer

@{
    
}

<!DOCTYPE html>
<html>
<head>
    <title>Usu≈Ñ komputer</title>
    <style>
        table {
            border-collapse: collapse;
        }
        th, td {
            padding: 10px;
            border: 1px solid #ccc;
            text-align: left;
        }
        th {
            background-color: #f4f4f4;
        }
    </style>
</head>
<body>
<div>
    <h2>Are you sure you want to delete this computer?</h2>

    <table>
        <tr>
            <th>Producent</th>
            <th>Model</th>
            <th>CPU</th>
            <th>RAM</th>
            <th>GPU</th>
            <th>Data produkcji</th>
            <th>Priorytet</th>
        </tr>
        <tr>
            <td>@Model.Producent</td>
            <td>@Model.Nazwa</td>
            <td>@Model.Cpu</td>
            <td>@Model.Ram</td>
            <td>@Model.Gpu</td>
            <td>@Model.DataProdukcji.ToString("yyyy-MM-dd")</td>
            <td>@Model.Priority</td>
        </tr>
    </table>

    <form asp-action="Delete" asp-controller="Komputer" method="post">
        <input type="hidden" asp-for="Id" />

        <button type="submit" class="btn btn-danger">Confirm Delete</button>
        <a href="@Url.Action("Index")" class="btn btn-secondary">Cancel</a>
    </form>
</div>

</body>
</html>
